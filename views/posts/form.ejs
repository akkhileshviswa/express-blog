<form action="<%= post && post.id ? '/posts/edit' : '/posts/create' %>" method="POST" class="post-form">
<% if (post && post.id) { %>
    <input type="hidden" name="id" value="<%= post.id %>">
<% } %>

    <div class="form-group">
        <label for="title">Title <span class="required">*</span></label>
        <input type="text" name="title" id="title" value="<%= post ? post.title : '' %>" required>
    </div>

    <div class="form-group">
        <label for="content">Content <span class="required">*</span></label>
        <textarea name="content" id="content" rows="5" required><%= post ? post.content : '' %></textarea>
    </div>

    <% if (error) { %>
        <span class="error">
            <%= error %>
        </span>
    <% } %>

    <div class="form-actions">
    <% if (post && post.id) { %>
        <button type="submit">Update Post</button>
    <% } else { %>
        <button type="submit">Create Post</button>
    <% } %>
    </div>
</form>
